@using Recodme.ShokuDex.WebApi.Models.FoodInfo
@model MealViewModel

@{ViewData["Title"] = "Create"; }

<h2>Category - Create</h2>

<div class="row">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Day" class="control-label"></label>
            <input asp-for="Day" class="form-control" />
            <span asp-validation-for="Day" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Portion" class="control-label"></label>
            <input asp-for="Portion" class="form-control" />
            <span asp-validation-for="Portion" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IsSugestion" class="control-label"></label>
            <input asp-for="IsSugestion" class="form-control" />
            <span asp-validation-for="IsSugestion" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}