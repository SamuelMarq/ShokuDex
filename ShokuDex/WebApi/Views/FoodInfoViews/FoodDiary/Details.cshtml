@using Recodme.ShokuDex.WebApi.Models.FoodInfo
@model MealViewModel

<h2>Meal - Details</h2>

<hr />
<div>
    <div class="row">
        <div class="col-sm">
            <dl class="row">
                <dt class="col-2">
                    @Html.DisplayNameFor(model => model.Day)
                </dt>
                <dd class="col-10">
                    @Html.DisplayFor(model => model.Day)
                </dd>
                <dt class="col-2">
                    @Html.DisplayNameFor(model => model.Portion)
                </dt>
                <dd class="col-10">
                    @Html.DisplayFor(model => model.Portion)
                </dd>
                @{
                    var f = ViewData["Food"] as FoodViewModel;
                    var tod = ViewData["TimeOfDay"] as TimeOfDayViewModel;
                }
                <dt class="col-2">
                    @Html.DisplayNameFor(model => model.FoodId)
                </dt>
                <dd class="col-10">
                    @f.Name
                </dd>
                <dt class="col-2">
                    @Html.DisplayNameFor(model => model.TimeOfDayId)
                </dt>
                <dd class="col-10">
                    @tod.Name
                </dd>
            </dl>
            <a asp-action="Index" asp-controller="FoodDiary" class="btn btn-danger">Back</a>
        </div>
    </div>
</div>
